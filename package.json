{
  "name": "@marko/webpack",
  "description": "a Marko plugin and loader for Webpack",
  "version": "6.2.9",
  "bugs": "https://github.com/marko-js/webpack/issues",
  "dependencies": {
    "@marko/babel-utils": "^5.0.0-next.50",
    "base-x": "^3.0.7",
    "concat-with-sourcemaps": "^1.1.0",
    "escape-string-regexp": "^4.0.0",
    "lasso-modules-client": "^2.0.5",
    "loader-utils": "^1.4.0",
    "sort-keys": "^4.0.0",
    "tslib": "^1.10.0",
    "webpack-virtual-modules": "^0.2.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@types/jest": "^25.1.3",
    "@types/node": "^13.7.4",
    "@types/webpack": "^4.41.6",
    "@typescript-eslint/eslint-plugin": "^2.20.0",
    "@typescript-eslint/parser": "^2.20.0",
    "coveralls": "^3.0.9",
    "cpy-cli": "^3.1.1",
    "css-loader": "^3.4.2",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-jest": "^23.7.0",
    "husky": "^4.2.3",
    "jest": "^25.1.0",
    "jest-file-snapshot": "^0.3.8",
    "lint-staged": "^10.0.7",
    "marko": "^4.18.47",
    "memory-fs": "^0.5.0",
    "mini-css-extract-plugin": "^0.9.0",
    "prettier": "^1.19.1",
    "standard-version": "^8.0.1",
    "style-loader": "^1.1.3",
    "ts-jest": "^25.2.1",
    "typescript": "^3.7.5",
    "webpack": "^4.29.5"
  },
  "files": [
    "dist",
    "loader.js",
    "plugin.js",
    "marko.json"
  ],
  "homepage": "https://github.com/marko-js/webpack",
  "keywords": [
    "loader",
    "marko",
    "plugin",
    "webpack"
  ],
  "license": "MIT",
  "peerDependencies": {
    "marko": "^4.20.9 || ^5.0.0-next || ^5",
    "webpack": "^4"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/marko-js/webpack"
  },
  "scripts": {
    "build": "tsc -p tsconfig.build.json && cpy '**/*.marko' '!__tests__/**' '../dist/' --cwd=src --parents",
    "ci:report": "cat coverage/lcov.info | coveralls",
    "ci:test": "jest --ci --coverage",
    "format": "prettier \"**/*.{json,md,js,ts}\" --write",
    "lint": "tsc --noEmit && eslint -f codeframe './src/**/*.ts'",
    "release": "standard-version",
    "prepublishOnly": "npm run build",
    "test": "jest --watch",
    "test:inspect": "node --inspect $(which jest) --watch --runInBand --testTimeout 99999999"
  },
  "types": "dist/index.d.ts"
}
